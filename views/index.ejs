<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/destyle.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <title>HOME</title>
  </head>
  <body data-barba="wrapper">
    <header>
      <nav>
        <div class="logo"><a href="/">UNTITLES</a></div>
        <form class="search">
          <button type="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path
                d="M10 18a7.952 7.952 0 0 0 4.897-1.688l4.396 4.396 1.414-1.414-4.396-4.396A7.952 7.952 0 0 0 18 10c0-4.411-3.589-8-8-8s-8 3.589-8 8 3.589 8 8 8zm0-14c3.309 0 6 2.691 6 6s-2.691 6-6 6-6-2.691-6-6 2.691-6 6-6z"
              ></path>
              <path
                d="M11.412 8.586c.379.38.588.882.588 1.414h2a3.977 3.977 0 0 0-1.174-2.828c-1.514-1.512-4.139-1.512-5.652 0l1.412 1.416c.76-.758 2.07-.756 2.826-.002z"
              ></path>
            </svg>
          </button>
          <input type="text" />
        </form>
        <div class="profile">
          <a href="#">Profile-Name</a>
        </div>
      </nav>
    </header>

    <div id="center">
      <main data-barba="container">
        <% const nowDate = new Date(); for (let month in dateList) { %>
        <section id="calender">
          <p class="Ym">
            <%= month.substr(0, month.indexOf('-')) %><span class="small"
              >年</span
            >
            <%= month.substr(month.indexOf('-') + 1) %><span class="small"
              >月</span
            >
          </p>
          <ul>
            <% for (let eventDate of dateList[month]) { const tmpEventDate = new
            Date(eventDate.event_date); %>
            <li>
              <% if (nowDate < tmpEventDate ) { %>
              <a href="auctions/<%= eventDate.id %>" class="calenderBlock">
                <p class="calenderStatus">開催予定</p>
              <% } else if (tmpEventDate.setDate(tmpEventDate.getDate() + 1) <
              nowDate) { %>
              <a href="auctions/<%= eventDate.id %>" class="calenderBlock statusClose">
                <p class="calenderStatus">開催終了</p>
              <% } else { %>

              <a href="auctions/<%= eventDate.id %>" class="calenderBlock statusActive">
                <p class="calenderStatus">開催中</p>
                <% } %>

                <div class="calenderHead">
                  <p>MON</p>
                  <div class="day"><%= eventDate.event_date.getDate() %></div>
                </div>
                <div class="calenderProduct">
                  <div class="calenderItemName">
                    <!-- TODO: 商品名を表示 -->
                    BMW X5 | SUV
                  </div>
                </div>
                <div class="calenderButton">
                  <p>競売画面へ</p>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                  >
                    <path d="M18 6h2v12h-2zm-8 5H4v2h6v5l6-6-6-6z"></path>
                  </svg>
                </div>
              </a>
            </li>

            <% } %>
          </ul>
        </section>
        <% } %>
      </main>
    </div>

    <footer></footer>

    <script src="https://cdn.jsdelivr.net/npm/@barba/core"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="./barba.js"></script>
  </body>
</html>
