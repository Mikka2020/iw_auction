<header>
  <nav>
      <h2>Kangarooo★</h2>
  </nav>
</header>
<section style="display: flex; justify-content: space-between; margin: 30px 5%;">
  <div style="width: 20%; border: 1px solid lightgray; border-radius: 5px; box-sizing: border-box; height: 210px;">
    <p><a style="display: flex; align-items: center; padding: 0px 20px; border-bottom: 1px solid lightgray; height: 50px; color: black; text-decoration: none; font-size: 16px; font-weight: 600;" href="/admin/cars">車両管理</a></p>
    <p><a style="display: flex; align-items: center; padding: 0px 20px; border-bottom: 1px solid lightgray; height: 50px; color: black; text-decoration: none; font-size: 16px; font-weight: 600;" href="/admin/users">会員管理</a></p>
    <p><a style="display: flex; align-items: center; padding: 0px 20px; border-bottom: 1px solid lightgray; height: 50px; color: black; text-decoration: none; font-size: 16px; font-weight: 600;" href="/admin/events">開催日管理</a></p>
    <p><a style="display: flex; align-items: center; padding: 0px 20px; height: 50px; color: black; text-decoration: none; font-size: 16px; font-weight: 600;" href="/admin/sales">販売管理</a></p>
  </div>
  <div style=" width: 75%;">
    <h3 style="font-size: 20px; padding-bottom: 15px;">
      会員管理
    </h3>
<% for (let user of userList) { %>
  <div style="display: flex; justify-content: space-between; align-items: center; font-size: 13px; height: 40px; border: 1px solid lightgray; border-radius: 5px; margin-bottom: 10px; padding-left: 10px; padding-right: 10px;">
    <div style="display: flex; align-items: center;">
      <p class="vv" style="width: 100px;">
        <%= user.last_name %>
          <%= user.first_name %>
      </p>
      <p class="vv" style="width: 80px;"><%= user.user_name %></p>
      <p class="vv" style="width: 170px;"><%= user.mail_address %></p>
      <p class="vv" style="width: 110px;"><%= user.phone_number %></p>
      <p class="vv" style=""><%= user.address %></p>
    </div>
    <div style="display: flex; align-items: center;">
      <p><a style="margin-right: 10px; background-color: rgb(227, 227, 227); padding: 5px 20px; border-radius: 5px; color: black; font-size: 13px; border: gray 1px solid; text-decoration: none;" href="/admin/users/<%= user.id %>">購入履歴</a></>
      <form action="/admin/users/<%= user.id %>/delete" method="post"
        onsubmit="return beforeSubmit(`<%= user.id %>`)">
        <button style="margin-right: 10px; background-color: rgb(236, 209, 209); padding: 5px 20px; border-radius: 5px; color: black; font-size: 13px; border: gray 1px solid; text-decoration: none;" type="submit">退会</button>
      </form>
    </div>
  </div>
  <% } %>
</div>
</section>

    <script>
      function beforeSubmit(userId) {
        if (window.confirm('ユーザーID' + userId + 'を退会させますがよろしいでしょうか？')) {
          return true;
        } else {
          return false;
        }
      }
    </script>